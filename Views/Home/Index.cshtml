@{
    ViewData["Title"] = "Video Catalogue";
}

<div class="container py-5">
    <h1 class="text-center mb-5 display-5 fw-bold text-primary">🎬 Video Catalogue</h1>

    <!-- Navigation Buttons -->
    <div class="d-flex justify-content-center gap-3 mb-5">
        <button id="btnShowCatalogue" class="btn btn-outline-primary px-4 py-2">View Catalogue</button>
        <button id="btnShowUpload" class="btn btn-outline-primary px-4 py-2">Upload Videos</button>
    </div>

    <!-- Upload Section -->
    <div id="uploadView" class="card shadow-lg p-4 mx-auto text-center" style="max-width:600px; display:none;">
        <h4 class="mb-4 text-success fw-semibold">📤 Upload Your Videos</h4>
        <form id="uploadForm" enctype="multipart/form-data">
            <input type="file" name="files" id="fileInput" accept=".mp4" multiple class="form-control mb-4" />
            <button type="submit" class="btn btn-success w-100 py-2">Upload</button>

            <div class="progress mt-4" style="height: 8px; display:none;">
                <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" style="width: 0%;"></div>
            </div>

            <div id="uploadMessage" class="mt-3 text-danger fw-semibold"></div>
        </form>
    </div>

    <!-- Catalogue Section -->
    <div id="catalogueView" class="mt-5">
        <!-- Video Player -->
        <div id="videoPlayer" class="text-center mb-5" style="display:none;">
            <h5 class="text-secondary fw-semibold mb-3">Now Playing</h5>
            <div class="ratio ratio-16x9 mx-auto" style="max-width: 720px;">
                <video id="player"
                       class="shadow-lg rounded border border-2 border-primary w-100 h-100"
                       controls>
                </video>
            </div>
        </div>

        <!-- Video List -->
        <div class="list-group shadow-sm rounded-3 overflow-hidden mx-auto" style="max-width: 800px;">
            @foreach (var video in Model)
            {
                <div class="list-group-item list-group-item-action d-flex align-items-center justify-content-between video-item py-3 px-4"
                     data-filename="@video.FileName"
                     style="cursor:pointer; transition: background-color 0.2s;">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-film text-primary fs-4 me-3"></i>
                        <div>
                            <div class="fw-semibold text-truncate" style="max-width: 350px;" title="@video.FileName">
                                @video.FileName
                            </div>
                            <small class="text-muted">@((video.FileSize / (1024 * 1024.0)).ToString("F2")) MB</small>
                        </div>
                    </div>
                    <i class="bi bi-play-circle-fill text-secondary fs-1"></i>
                </div>
            }
        </div>

        <div id="videoMessage" class="mt-4 text-center text-secondary fw-semibold"></div>
    </div>
</div>

<!-- Bootstrap & Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

<script>
    const uploadView = $("#uploadView");
    const catalogueView = $("#catalogueView");
    const player = $("#player");
    const playerContainer = $("#videoPlayer");
    const progressBar = $(".progress");
    const progressFill = $(".progress-bar");

    $("#btnShowUpload").click(() => {
        uploadView.fadeIn();
        catalogueView.hide();
    });

    $("#btnShowCatalogue").click(() => {
        uploadView.hide();
        catalogueView.fadeIn();
    });

    // Upload handler with progress feedback
    $("#uploadForm").on("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData();
        const files = $("#fileInput")[0].files;

        if (files.length === 0) {
            $("#uploadMessage").text("Please select at least one file.");
            return;
        }

        for (const file of files) {
            formData.append("videoFiles", file);
        }

        progressBar.show();
        progressFill.css("width", "0%");

        try {
            const xhr = new XMLHttpRequest();
            xhr.open("POST", "/api/upload");

            xhr.upload.addEventListener("progress", (event) => {
                $("#uploadMessage").text("");

                if (event.lengthComputable) {
                    const percent = Math.round((event.loaded / event.total) * 100);
                    progressFill.css("width", percent + "%");
                }
            });

            xhr.onload = () => {
                if (xhr.status === 200) {
                    progressFill.removeClass("bg-success").addClass("bg-primary");
                    $("#uploadMessage").removeClass("text-danger").addClass("text-success").text("Upload successful! Refreshing...");
                    setTimeout(() => location.reload(), 1500);
                } else {
                    const msg = xhr.responseText;
                    if (msg.includes("Request body too large") || msg.includes("Request Entity Too Large")) {
                        $("#uploadMessage").text("Response Code 413. The file(s) selected exceeds the 200 MB limit.");
                    } else {
                        $("#uploadMessage").text("Error: " + msg);
                    }
                }
            };

            xhr.onerror = () => {
                $("#uploadMessage").text("Upload failed. Please try again.");
            };

            xhr.send(formData);
        } catch (err) {
            $("#uploadMessage").text("Upload failed: " + err);
        }
    });

    // Default: load first video
    const firstVideoItem = $(".video-item").first();
    if (firstVideoItem.length) {
        const firstFilename = firstVideoItem.data("filename");
        player.attr("src", `/media/${firstFilename}`);
        playerContainer.show();
        player[0].load();
    } else {
        $("#videoMessage").text("No videos found! Try uploading some to get started.");
    }

    // Click to play a selected video
    $(".video-item").hover(
        function() { $(this).addClass("shadow-lg border border-primary"); },
        function() { $(this).removeClass("shadow-lg border border-primary"); }
    );

    $(".video-item").click(function () {
        const filename = $(this).data("filename");
        player.attr("src", `/media/${filename}`);
        playerContainer.fadeIn();
        player[0].play();
    });
</script>
